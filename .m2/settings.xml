<settings>
    <activeProfiles>
        <activeProfile>noumena-github</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>noumena-github</id>
            <repositories>
                <repository>
                    <id>noumena</id>
                    <url>https://maven.pkg.github.com/noumenadigital/packages/</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>noumena</id>
                    <url>https://maven.pkg.github.com/noumenadigital/packages/</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>noumena</id>
            <username>${GITHUB_REPO_USER}</username>
            <password>${GITHUB_REPO_PASS}</password>
        </server>
    </servers>
</settings>
